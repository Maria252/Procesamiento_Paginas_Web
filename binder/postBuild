#!/bin/bash

# Instalar Playwright browsers y dependencias (esto también instala las dependencias del sistema)
echo "🔧 Instalando navegadores de Playwright..."
python -m playwright install chromium

echo "🔧 Instalando dependencias del sistema de Playwright..."
python -m playwright install-deps chromium

# Crear directorios necesarios si no existen
echo "📁 Creando directorios necesarios..."
mkdir -p /home/jovyan/work/data/htmls
mkdir -p /home/jovyan/work/data/processed

# Asegurar permisos correctos
echo "🔐 Configurando permisos..."
chmod +x /home/jovyan/work/notebooks/*.py 2>/dev/null || true

echo "✅ Configuración de Playwright completada"
